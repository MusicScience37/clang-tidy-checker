{
  "cSpell.words": [],
  "clangd.arguments": [
    "--compile-commands-dir=${workspaceFolder}/sample_inputs/build",
    "--clang-tidy",
    "-header-insertion=iwyu"
  ],
  "cmake.buildDirectory": "${workspaceFolder}/sample_inputs/build",
  "cmake.sourceDirectory": "${workspaceFolder}/sample_inputs/",
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.autocomplete": "disabled",
  "C_Cpp.errorSquiggles": "disabled",
  "esbonio.sphinx.confDir": "${workspaceFolder}/doc/src",
  "restructuredtext.linter.disabledLinters": ["rstcheck", "rst-lint"],
  "esbonio.server.enabled": false,
  "files.watcherExclude": {
    "**/.venv/**": true
  },
  "hadolint.cliOptions": ["--ignore", "DL3013", "--no-color"],
  "python.testing.pytestEnabled": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "cSpell.enableFiletypes": ["cmake", "toml"]
}
